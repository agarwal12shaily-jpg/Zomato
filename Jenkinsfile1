pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        nodejs 'nodejs25'
    }
 
    stages {
        
        stage ("Git Checkout") {
            steps {
                git 'https://github.com/agarwal12shaily-jpg/Zomato.git'
            }
        }

        stage ("Build Docker Image") {
            steps {
                sh "docker build -t sagarwa/zomatoapp:1.0 ."
            }
        }
        stage ("Tag & Push to DockerHub") {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-login', passwordVariable: 'dockerhubpass', usernameVariable: 'dockerhublogin')]) {
                        sh "docker login -u ${dockerhublogin} -p ${dockerhubpass}"
                        sh "docker push sagarwa/zomatoapp:1.0 "
                    }
                }
            }
        }
    }
}
        
